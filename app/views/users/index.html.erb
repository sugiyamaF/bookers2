<p><%= flash[:notice] %></p>
<%= render 'shared', user: current_user, user: @user %>
    <div class='col-md-8 offset-md-1'>
    <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>
              image
            </th>
            <th>
              name
            </th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>

          <tr>
            <td>
              <% if current_user.image.attached? %>
              <%= image_tag current_user.image, size: "80x80" %>
              <% else %>
              <%= image_tag 'no_image', size: "80x80" %>
              <% end %>
            </td>
            <td><%= current_user.name %></td>
            <td><%= link_to "Show", user_path(current_user.id)%></td>
          </tr>

        </tbody>
      </table>
    </div>
