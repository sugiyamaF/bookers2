<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class ="row">

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">





            <% if user_signed_in? %>

          <li class="nav-link text-light">

            <%= link_to user_path(current_user.id), class:"text-light text-decoration-none" do %>
              <i class="fas fa-home"></i>
              Home
            <% end %>
          </li>

          <li class= "nav-link text-light">
            <i class="fas fa-users"></i>
            <%= link_to "Users", users_path, class:"text-light text-decoration-none" %>

          </li>

          <li class="nav-link text-light">
            <i class="fas fa-book-open"></i>
            <%= link_to "Books", books_path, class:"text-light text-decoration-none" %>
          </li>


          <li class="nav-link text-light">
            <i class="fas fa-sign-out-alt"></i>
            <%= link_to "Log out", destroy_user_session_path, class:"text-light text-decoration-none", method: :delete %>
          </li>

            <% else %>
          <li class="nav-link text-light">
                <i class="fas fa-home"></i>
                <%= link_to "Home", root_path, class:"text-light textdecoration-none" %>
          </li>

          <li class="nav-link text-light">
            <i class="fas fa-link"></i>
            <%= link_to "About", home_about_path, class:"text-light text-decoration-none" %>
          </li>

          <li class="nav-link text-light">
            <i class="fas fa-user-plus"></i>
            <%= link_to "Sign up", new_user_registration_path, class:"text-light text-decoration-none" %>
          </li>

          <li class="nav-link text-light">
            <i class="fas fa-sign-in-alt"></i>
            <%= link_to "Log in", new_user_session_path, class:"text-light text-decoration-none" %>
          </li>

            <% end %>

        </ul>
        </div>
      </div>
    </div>
  </nav>
</header>

  <body>
    <%= yield %>

  </body>
</html>


