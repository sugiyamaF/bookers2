<p><%= flash[:notice] %></p>
<div class= "container px-5 px-sm-0">
  <div class= "row">
     <%= render 'list', user: current_user, book: @book %>
        <div class='col-md-8 offset-md-1'>
          <h2>Bookdetail</h2>
          <table class="table">
            <tr>
              <td>
                <% if @book.user.image.attached? %>
                <%= image_tag @book.user.image, size: "80x80" %>
                <% else %>
                <%= image_tag 'no_image', size: "80x80" %>
                <% end %><br>
                <%= link_to @book.user.name, user_path %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td>
                <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>
                Edit
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" do %>
                Destroy
                <% end %>
              </td>
            </tr>
        </table>
        </div>
      </div>
    </div>
