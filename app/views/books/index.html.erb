  <main>
    <div class= "container">
      <div class= "row">
        <div class= "col-md-3">
          <h2>User info</h2>
          <table class='table'>


            <tr>


            </tr>
            <tr>
              <th>name</th>

            </tr>
            <tr>
              <th>introduction</th>

            </tr>

          </table>

          <div class="row">
            <a class="btn btn-outline-secondary btn-block edit_user" href="/users/:id/edit">
              <i class="fas fa-user-cog"></i>
            </a>
          </div>


          <h2 class ="mt-3">New Book</h2>
          <div class="form-group">
            <%= form_with model: @book, url: '/books', method: :post do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>

              <h4>Opinion</h4>
              <%= f.text_area :body %>

              <%= f.submit '投稿' %>


            <% end %>

          </div>

        </div>
      </div>
    </div>





  </main>




