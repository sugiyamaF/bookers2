  <p><%= flash[:notice] %></p>
  <%= render 'list', user: current_user, book: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>
            Title
          </th>
          <th>
            Opinion
          </th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
            <% if current_user.profile_image.attached? %>
            <%= image_tag current_user.profile_image, size: "80x80" %>
            <% else %>
            <%= image_tag "no_image", size: "80x80" %>
            <% end %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>









