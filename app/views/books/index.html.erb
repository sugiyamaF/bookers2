
<body>
  <main>
    <div class= "container">
      <div class= "row">
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
              <th></th>
              <th>
                Title
              </th>
              <th>
                Opinion
              </th>
              </tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
              <td>
              <% if @user.image.attached? %>
              <%= image_tag @user.image, size: "100x100" %>
              <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
              </td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>












